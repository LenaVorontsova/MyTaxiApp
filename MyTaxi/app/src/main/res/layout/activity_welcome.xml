<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/welcome">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customerButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/driverButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="#C7ED54"
        android:text="@string/imCustomerButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/driverButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:background="#F17070"
        android:text="@string/imDriverButton" />
</RelativeLayout>